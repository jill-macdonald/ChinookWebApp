@page
@model ChinookWebApp.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Album Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ArtistId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Album) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistId)
            </td>
            <td>
                <a asp-page="./Tracks" asp-route-id="@item.AlbumId">Tracks</a> |
                <a asp-page="./Artists" asp-route-id="@item.AlbumId">Artists</a> |
                <a asp-page="./Edit" asp-route-id="@item.AlbumId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AlbumId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AlbumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>